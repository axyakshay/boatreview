<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Rent your boats!! Discover the sea</h1>
    <p>A place for Boat Owners, Boat Renters and Boat Captains.</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>
<div class="row">
  <% @boats.each do |boat| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag boat.image.url(:medium), class: 'image'), boat %> 
      </div>
    </div>
  <% end %>
</div>
