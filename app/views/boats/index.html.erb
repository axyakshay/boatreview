<p id="notice"><%= notice %></p>

<h1>Listing Boats</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Boat dimensions</th>
      <th>Place</th>
      <th>Rating</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= image_tag boat.image.url(:medium) %></td>
        <td><%= boat.title %></td>
        <td><%= boat.description %></td>
        <td><%= boat.boat_dimensions %></td>
        <td><%= boat.place %></td>
        <td><%= boat.rating %></td>
        <td><%= link_to 'Show', boat %></td>
        <td><%= link_to 'Edit', edit_boat_path(boat) %></td>
        <td><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

